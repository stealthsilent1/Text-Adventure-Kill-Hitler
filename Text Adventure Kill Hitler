int numOfEndingsDone(std::vector<bool> EndingList){
    int endingsDone = 0;
        for(int x = 0;x < EndingList.size();x++){
            if (EndingList[x] == true) {
                
                endingsDone = endingsDone + 1;
            }
            
        }
      return endingsDone;  
    }

